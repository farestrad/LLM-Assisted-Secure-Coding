{
  "name": "code-llama-integration",
  "displayName": "Code Llama Integration",
  "description": "Integrates Code Llama with VS Code for code analysis and security vulnerability checks.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codeLlama.runCodeLlama",
    "onCommand:codeLlama.generateCode"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeLlama.runCodeLlama",
        "title": "Run Code Llama"
      },
      {
        "command": "codeLlama.generateCode", 
        "title": "Generate Code with Code Llama"
      },
      {
        "command": "extension.copyToClipboard",
        "title": "Copy Generated Code to Clipboard"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "codeLlamaGeneratedCodeView",
          "name": "Code Llama Generated Code"
        }
      ]
    }
  },
  "scripts": {
    "build": "webpack --mode production",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.11",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
